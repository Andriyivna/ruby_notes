<h1>Your Notes</h1>
<div class="container">
  <div class="row justify-content-start">
    <div class="col-2">
      <ul class="notes-list">
        <% @notes.each do |note| %>
          <li class="note">
            <%= link_to note.title, edit_note_path(note), class:"note-link" %>
            <div class="buttons-link-position">
              <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, note,  class: "btn btn-secondary button-margin",  method: :delete, data: { confirm: 'Are you sure?' }%>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col bg-note-text">
    </div>
  </div>
</div>
</div>

<%= link_to '<i class="fas fa-plus"></i>'.html_safe, new_note_path, class:"btn btn-secondary add-button" %>